<!DOCTYPE html>
<html lang="fr">
    <head>
        <title>{{ app_name }} Admin</title>

        <!-- BEGIN META -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="keywords" content="your,keywords">
        <meta name="description" content="{{ app_name }} admin panel">
        <meta name="_token" content="{{ token() }}">
        <!-- END META -->

        {{ debug_bar_header() | raw }}

        <link rel="icon" href="{{ asset('media/default/favicon.ico') }}">

        <!-- BEGIN STYLESHEETS -->
        {% for css in libs['css'] %}
            <link href='{{ asset(css) }}' rel='stylesheet' type='text/css'/>
        {% endfor %}
        {% block css %}{% endblock %}
        <!-- END STYLESHEETS -->

        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>

    <body>

        <div id="app">
            {% block body %}{% endblock %}
        </div>

        <!-- BEGIN JAVASCRIPT -->
        {% for js in libs['js'] %}
            <script src="{{ asset(js) }}"></script>
        {% endfor %}
        {% block js %}{% endblock %}
        {{ debug_bar_footer() | raw }}
        <!-- END JAVASCRIPT -->

    </body>
</html>